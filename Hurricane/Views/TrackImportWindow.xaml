<controls:MetroWindow x:Class="Hurricane.Views.TrackImportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:behaviors="clr-namespace:Hurricane.GUI.Behaviors"
        Title="{StaticResource ImportTrack}" SizeToContent="Height" Width="400" GlowBrush="{StaticResource AccentColorBrush}" ShowInTaskbar="False" ResizeMode="NoResize" x:Name="BaseWindow" WindowStartupLocation="CenterOwner">
    <StackPanel Orientation="Vertical" Margin="10">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="{StaticResource TrackName}"/>
                <TextBlock Text=":"/>
            </StackPanel>
            <TextBlock Text="{Binding ElementName=BaseWindow,Path=Trackname}" Grid.Column="1"/>
        </Grid>
        <Grid Margin="0,10,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="{StaticResource Playlist}"/>
                <TextBlock Text=":"/>
            </StackPanel>
            <ComboBox Grid.Column="1" ItemsSource="{Binding ElementName=BaseWindow,Path=Playlists}" SelectedItem="{Binding ElementName=BaseWindow,Path=SelectedPlaylist}" DisplayMemberPath="Name"/>
        </Grid>
        <DockPanel Margin="0,15,0,0">
            <CheckBox Content="{StaticResource Remember}" IsChecked="{Binding ElementName=BaseWindow,Path=RememberChoice}" x:Name="RememberCheckBox"/>
            <CheckBox Content="{StaticResource AlsoAfterRestart}" Margin="5,0,0,0" IsChecked="{Binding ElementName=BaseWindow,Path=RememberAlsoAfterRestart}" IsEnabled="{Binding ElementName=RememberCheckBox,Path=IsChecked}" ToolTip="{StaticResource CanBeResetedInSettings}"/>
            <Grid Grid.IsSharedSizeScope="True" HorizontalAlignment="Right">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition SharedSizeGroup="Buttons"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition SharedSizeGroup="Buttons"/>
                </Grid.ColumnDefinitions>
                <Button Grid.Column="0" Content="{StaticResource Cancel}" behaviors:ButtonBehavior.DialogResult="False"/>
                <Button Grid.Column="2" Content="{StaticResource Add}" behaviors:ButtonBehavior.DialogResult="True"/>
            </Grid>
        </DockPanel>
    </StackPanel>
</controls:MetroWindow>
